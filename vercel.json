{
  "version": 2,
  "name": "ncs-research-platform",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "http://localhost:8000/api/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "http://localhost:8000"
  },
  "functions": {
    "pages/api/**/*.js": {
      "maxDuration": 30
    }
  }
}
